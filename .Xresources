URxvt.font: xft:Hack Nerd Font Mono:style=Bold:size=12
URxvt.scrollBar: false
URxvt*transparent: true
URxvt*shading: 75
URxvt*cursorBlink: true


!! Set the background, foreground and cursor colors as below:
*.background: #282828
*.foreground: white
*.cursorColor: white

!! System-default:
*.color0:	#000000
*.color1:	#AA0000
*.color2:	#00AA00
*.color3:	#AA5500
*.color4:	#0000AA
*.color5:	#AA00AA
*.color6:	#00AAAA
*.color7:	#AAAAAA
*.color8:	#555555
*.color9:	#FF5555
*.color10:	#55FF55
*.color11:	#FFFF55
*.color12:	#5555FF
*.color13:	#FF55FF
*.color14:	#55FFFF
*.color15:	#FFFFFF


!! Extensions:
URxvt.perl-ext-common: default,matcher,resize-font,fullscreen,clipboard
URxvt.colorUL:  white

!! Matcher:
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

!! Resize-font:
URxvt.keysym.M-j:     resize-font:smaller
URxvt.keysym.M-k:      resize-font:bigger
URxvt.keysym.M-equal:     resize-font:reset

!! Fullscreen:
URxvt.keysym.F11: perl:fullscreen:switch

!! Copy and Paste:
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
