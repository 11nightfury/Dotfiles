# Quit bspwm
super + shift + Escape
    prompt "Are you sure you want to quit" "bspc quit"

# Restart bspwm
super + shift + b
    bspc wm -r && notify-send "BSPWM" "BSPWM restarted"

# Close or kill window
super + {c,q}
    bspc node -{c,k}

# Alternate between tiled and monocole layout
# If you use '-l monocle' you loose the toggle functionality
super + grave
    bspc desktop -l next

# Toggle polybar on/off
super + shift + t
    polybar-msg cmd toggle

# Set the window state
super + {t,alt + t,f,space}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Focus on desktop
super + {0-9}
    bspc desktop -f {0-9}

# Send window to desktop
super + shift + {0-9}
    bspc node -d {0-9} --follow

# Focus on window in direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Swap window with direction
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Expand or contract node in direction
super + alt + {h,j,k,l}
    bspwm_resize {west,south,north,east} 50

# Dynamic gaps.
super + shift + bracket{left,right}
	bspc config -d focused window_gap "$(($(bspc config -d focused window_gap) {-,+} 5 ))"

# Move floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Reload polybar
super + shift + x
    pkill -USR1 sxhkd && notify-send "sxhkd" "Reloaded key bindings"

# Reload sxhkd
super + shift + p
    pkill -x polybar && notify-send "polybar" "Reloaded polybar" && polybar mybar -r &

# Brightness
super + {Up,Down}
    light {-A 5, -U 5} && polybar-msg hook backlight 1

# Volume
super + {Left,Right,m}
    volume {down,up,toggle} && polybar-msg hook volume 1

# Reboot and shutdown
super + shift + {r,s}
    prompt {"Are you sure you want to reboot?" "reboot", "Are you sure you want to shutdown?" "shutdown now"}

# Run dmenu
super + d
    dmenu_run

# Run terminal
super + Return
    alacritty

# Screenshot
super + {_,shift + } Print
    {screenshot full,screenshot select}

# Run terminal applications
super + t ; {c,h,e,n,r}
    alacritty -e {cmus,htop,neomutt,newsboat,ranger}

# Run gui applications
super + g ; {d,f,t,q}
    {discord,firefox,thunar,qbittorrent}
