# Quit bspwm
super + shift + Escape
    prompt "Are you sure you want to quit" "bspc quit"

# Restart bspwm
super + shift + b
    bspc wm -r && notify-send "BSPWM" "BSPWM restarted"

# Close or kill window
super + {c,q}
    bspc node -{c,k}

# Focus on desktop
super + {0-9}
    bspc desktop -f {0-9}

# Send window to desktop
super + shift + {0-9}
    bspc node -d {0-9} --follow

# Focus on window in direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Swap window with direction
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Switch to last visited desktop
alt + Tab
    bspc desktop last -f

# Set the window state
super + {alt + space,alt + t,f,space}
    bspc node -t "~{tiled,pseudo_tiled,floating,fullscreen}"

# Set the node flags
super + n ; {l,s,p}
    bspc node -g {locked,sticky,private}

# Make node split ratios equal or balanced
super + n ; {e,b}
    bspc node @/ {--equalize,--balance}

# Insert receptacle
super + n ; r
    bspc node -i

# Remove the first matching receptacle from current desktop
super + n ; q
    bspc node 'any.leaf.!window.local' -k

# Move marked/focused node to the first matching receptacle
super + n ; i
    bspwm_smart_presel

# Rotate desktop
super + {_,shift + }r
    bspc node @/ --rotate {90,-90}

# Expand or contract node in direction
super + alt + {h,j,k,l}
    bspwm_resize {west,south,north,east} 50

# Dynamic gaps
super + shift + bracket{left,right}
    bspc config -d focused window_gap "$(($(bspc config -d focused window_gap) {-,+} 5 ))"

# Reset gaps to default
super + shift + u
    bspc config window_gap 5

# Preselect the direction, cancel the preselection
# by pointing at given direction twice
ctrl + alt + {h,j,k,l}
    bspc node --presel-dir "~{west,south,north,east}"

# Preselect the ratio
super + alt + {1-9}
    bspc node -o 0.{1-9}

# Move floating window
super + ctrl + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# Reload polybar and sxhkd
super + x; {p,s}
    pkill -USR1 {polybar,sxhkd} && notify-send "Reloaded config"

# Toggle polybar on/off
super + shift + t
    polybar-msg cmd toggle

# Lock screen
super + alt + b
    betterlockscreen -l

# Brightness
super + {Up,Down}
    light {-A 5, -U 5} && polybar-msg hook backlight 1

# Volume
super + {Left,Right,m}
    volume {down,up,toggle} && polybar-msg hook volume 1

# Reboot and shutdown
super + shift + {r,s}
    prompt {"Are you sure you want to reboot?" "reboot", "Are you sure you want to shutdown?" "shutdown now"}

# Run dmenu
super + d
    dmenu_run

# Run terminal
super + Return
    alacritty

# Screenshot
super + {_,shift + } Print
    {screenshot full,screenshot select}

# Run terminal applications
super + t ; {c,h,e,n,r}
    alacritty -e {cmus,htop,neomutt,newsboat,ranger}

# Run GUI applications
super + g ; {d,f,t,q}
    {discord,firefox,thunar,qbittorrent}
