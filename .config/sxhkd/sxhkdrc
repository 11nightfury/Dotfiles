# Quit bspwm
super + shift + Escape
    prompt "Are you sure you want to quit" "bspc quit"

# Restart bspwm
super + shift + b
    bspc wm -r

# Close or kill window
super + {c,q}
    bspc node -{c,k}

# Focus on desktop
super + {0-9}
    bspc desktop -f {0-9}

# Send window to desktop
super + shift + {0-9}
    bspc node -d {0-9} --follow

# Focus on window in direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Swap window with direction
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Toggle floating window on and off
super + o
    bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# Expand or contract node in direction
super + alt + {h,j,k,l}
    bspwm_resize {west,south,north,east}

# Reload polybar or sxhkd
super + shift + {x,p}
    { \
    pkill -USR1 sxhkd && notify-send "sxhkd" "Reloaded key bindings", \
    pkill -x polybar && polybar mybar -r & \
    }

# Brightness
super + {Up,Down}
    light {-A 5, -U 5} && polybar-msg hook backlight 1

# Volume
super + {Left,Right,m}
    volume {down,up,toogle} && polybar-msg hook volume 1

# Reboot and shutdown
super + shift + {r,s}
    prompt {"Are you sure you want to reboot?" "shutdown -r now", "Are you sure you want to shutdown?" "shutdown now"}

# Run dmenu
super + d
    dmenu_run

# Run terminal
super + Return
    st

# Screenshot
super + {_,shift + } Print
    {screenshot full,screenshot select}

# Run terminal applications
super + t ; {c,h,e,n,r}
    st -e {cmus,htop,neomutt,newsboat,ranger}

# Run gui applications
super + g ; {d,f,t,q}
    {discord,firefox,thunar,qbittorrent}
