# Quit bspwm
super + shift + Escape
    prompt "Are you sure you want to quit" "bspc quit"

# Restart bspwm
super + shift + b
    bspc wm -r

# Close or kill window
super + {c,q}
    bspc node -{c,k}

# Focus on desktop
super + {0-9}
    bspc desktop -f {0-9}

# Send window to desktop
super + shift + {0-9}
    bspc node -d {0-9} --follow

# Focus on window in direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Swap window with direction
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Toggle floating window on and off
super + o
    bspwm_fullscreen

# Expand or contract node in direction
super + ctrl + {h,j,k,l}
    bspwm_resize {west,south,node,east}

# Restart hotkey daemon
super + shift + x
    killandnotify "sxhkd" "Config reloaded" && sxhkd &

# Reload polybar
super + shift + p
    reloadpolybar

# Reboot and shutdown
super + shift + {r,s}
    prompt {"Are you sure you want to reboot?" "sudo reboot", "Are you sure you want to shutdown?" "sudo shutdown"}

# Run dmenu
super + d
    dmenu_run

# Run terminal
super + Return
    st
