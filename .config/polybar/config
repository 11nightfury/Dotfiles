[colors]
background                              =   #282A36
background-alt                          =   #BD93F9
foreground                              =   #F8F8F2
foreground-alt                          =   #FF79C6
primary                                 =   #9AEDFE
secondary                               =   #e60053
alert                                   =   #EC5F67

[bar/mybar]
width                                   =   100%
height                                  =   25
fixed-center                            =   true
radius                                  =   0.0

wm-restack                              =   bspwm
enable-ipc                              =   true
bottom                                  =   false

background                              =   ${colors.background}
foreground                              =   ${colors.foreground}

line-size                               =   0
line-color                              =   #f00

border-size                             =   0
border-color                            =   #00000000

padding                                 =   0

module-margin-left                      =   1
module-margin-right                     =   1

font-0                                  =   "Hack Nerd Font Mono:style=Bold:size=11"

modules-left                            =   bspwm xwindow
modules-right                           =   check_update eth-up eth-down cpu memory temperature battery backlight volume date

tray-position                           =   right
tray-padding                            =   1
tray-background                         =   ${colors.background}
tray-offset-x                           =   0
tray-offset-y                           =   0
tray-scale                              =   1.0

cursor-click                            =   pointer
cursor-scroll                           =   ns-resize

[module/xwindow]
type                                    =   internal/xwindow
label                                   =   %title%

format                                  =   <label>
format-background                       =   ${colors.background-alt}
format-foreground                       =   ${colors.foreground}
format-padding                          =   2

label-empty                             = 

[module/bspwm]
type                                    =   internal/bspwm

label-focused                           =   %index%
label-focused-background                =   ${colors.background-alt}
label-focused-padding                   =   2

label-occupied                          =   %index%
label-occupied-padding                  =   2
label-occupied-foreground               =   ${colors.foreground-alt}

label-urgent                            =   %index%!
label-urgent-background                 =   ${colors.alert}
label-urgent-padding                    =   2

label-empty                             =   %index%
label-empty-foreground                  =   ${colors.primary}
label-empty-padding                     =   2

[module/backlight]
type                                    =   custom/ipc
hook-0                                  =   light -G | sed 's/\.[0-9]*//' | awk '{ print int($1+1) }'

format-prefix                           =   " "
format-underline                        =   ${colors.foreground-alt}
format-prefix-foreground                =   ${colors.background-alt}

initial                                 =   1

[module/cpu]
type                                    =   internal/cpu
interval                                =   2

format                                  =   <label>
format-prefix                           =   " "
format-prefix-foreground                =   ${colors.background-alt}
label                                   =   %percentage%%

[module/temperature]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/temp.sh"

label                                   =   "%output%"
internal                                =   10

format-prefix                           =   " "
format-prefix-foreground                =   ${colors.background-alt}

[module/memory]
type                                    =   internal/memory
interval                                =   5

format                                  =   <label>
format-prefix                           =   " "
format-prefix-foreground                =   ${colors.background-alt}

label                                   =   %percentage_used%%

[module/date]
type                                    =   internal/date
interval                                =   60

date                                    =   %a %d %b
time                                    =   %H:%M

format-prefix                           =   " "
format-prefix-foreground                =   ${colors.background-alt}

label                                   =   %date% %time%

[module/volume]
type                                    =   custom/ipc
hook-0                                  =   "~/.config/polybar/scripts/volume.sh"

format-volume                           =   <ramp-volume><label-volume>
format-muted                            =   "<label-muted>  0%"

ramp-volume-0                           =   " "
ramp-volume-1                           =   " "
ramp-volume-2                           =   " "
ramp-volume-foreground                  =   ${colors.foreground-alt}

label-volume                            =   %output%
label-muted                             =   " "
label-muted-foreground                  =   ${colors.background-alt}

initial                                 =   1

[module/battery]
type                                    =   internal/battery
full-at                                 =   98

battery                                 =   BAT0
adapter                                 =   ADP1
poll-interval                           =   5

format-charging                         =   <label-charging>
format-charging-prefix                  =   "⚡"
format-charging-prefix-foreground       =   ${colors.background-alt}

format-discharging                      =   <label-discharging>
format-discharging-prefix               =   " "
format-discharging-prefix-foreground    =   ${colors.background-alt}

label-charging                          =   %percentage%%
label-discharging                       =   %percentage%%

[module/eth-down]
type                                    =   internal/network
interface                               =   eno1
interval                                =   1

format-connected-prefix                 =   " "
format-connected-prefix-foreground      =   ${colors.background-alt}
label-connected                         =   %downspeed%

label-disconnected                      =   %ifname% disconnected
label-disconnected-foreground           =   ${colors.foreground-alt}

[module/eth-up]
type                                    =   internal/network
interface                               =   eno1
interval                                =   1

format-connected-prefix                 =   " "
format-connected-prefix-foreground      =   ${colors.background-alt}
label-connected                         =   %upspeed%

label-disconnected                      =   %ifname% disconnected
label-disconnected-foreground           =   ${colors.foreground-alt}

[module/check_update]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/updates_arch_combined.sh"

format-prefix                           =   " "
format-prefix-foreground                =   ${colors.background-alt}

interval                                =   7200

[settings]
screenchange-reload                     =   true

