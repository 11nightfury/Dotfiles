[colors]
background                              =   #282A36
background-alt                          =   #BD93F9
foreground                              =   #F8F8F2
foreground-alt                          =   #FF79C6
primary                                 =   #9AEDFE

color0                                  =   #FEFEFE
color1                                  =   #A77AC4
color2                                  =   #7197E7
color3                                  =   #292D3E

alert                                   =   #EC5F67

[bar/mybar]
width                                   =   100%
height                                  =   25
fixed-center                            =   true
radius                                  =   0.0

wm-restack                              =   bspwm
enable-ipc                              =   true
bottom                                  =   false

background                              =   ${colors.background}
foreground                              =   ${colors.foreground}

line-size                               =   0
line-color                              =   #f00

border-size                             =   0
border-color                            =   #00000000

padding                                 =   0

module-margin-left                      =   0
module-margin-right                     =   0

font-0                                  =   "Hack Nerd Font Mono:style=Bold:size=10"

modules-left                            =   bspwm xwindow
modules-center                          =   
modules-right                           =   arrow1 eth-up eth-down arrow2 check_update fs arrow3 cpu memory arrow2 temperature battery arrow3 backlight volume arrow2 date

tray-position                           =   right
tray-padding                            =   1
tray-background                         =   ${colors.color2}
tray-offset-x                           =   0
tray-offset-y                           =   0
tray-scale                              =   1.0

cursor-click                            =   pointer
cursor-scroll                           =   ns-resize

[module/xwindow]
type                                    =   internal/xwindow
label                                   =   %title%

format                                  =   <label>
format-background                       =   ${colors.background-alt}
format-foreground                       =   ${colors.foreground}
format-padding                          =   1

label-empty                             = 

[module/bspwm]
type                                    =   internal/bspwm

label-focused                           =   %index%
label-focused-background                =   ${colors.background-alt}
label-focused-padding                   =   1

label-occupied                          =   %index%
label-occupied-padding                  =   1
label-occupied-foreground               =   ${colors.foreground-alt}

label-urgent                            =   %index%!
label-urgent-background                 =   ${colors.alert}
label-urgent-padding                    =   1

label-empty                             =   %index%
label-empty-foreground                  =   ${colors.primary}
label-empty-padding                     =   1

[module/eth-up]
type                                    =   internal/network
; interface                               =   wlo1
interface                               =   eno1
interval                                =   5

format-connected-prefix                 =   "  "
format-connected-prefix-foreground      =   ${colors.color0}
format-connected-foreground             =   ${colors.color0}
format-connected-background             =   ${colors.color1}

label-connected                         =   %upspeed%
label-disconnected                      =   %ifname% disconnected
label-disconnected-foreground           =   ${colors.foreground-alt}

[module/eth-down]
type                                    =   internal/network
; interface                               =   wlo1
interface                               =   eno1
interval                                =   5

format-connected-prefix                 =   "  "
format-connected-prefix-foreground      =   ${colors.color0}
format-connected-foreground             =   ${colors.color0}
format-connected-background             =   ${colors.color1}

label-connected                         =   %downspeed%
label-disconnected                      =   %ifname% disconnected
label-disconnected-foreground           =   ${colors.foreground-alt}

[module/check_update]
type                                    =   custom/script
