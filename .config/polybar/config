[colors]
background                              =   #282A36
background-alt                          =   #BD93F9
foreground                              =   #F8F8F2
foreground-alt                          =   #FF79C6
primary                                 =   #9AEDFE

alert                                   =   #EC5F67

[bar/mybar]
width                                   =   100%
height                                  =   24
fixed-center                            =   true
radius                                  =   0.0

wm-restack                              =   bspwm
override-redirect                       =   true
enable-ipc                              =   true
bottom                                  =   false
separator                               =   " "

background                              =   ${colors.background}
foreground                              =   ${colors.foreground}

font-0                                  =   "Hack Nerd Font Mono:style=Bold:size=10;2"
font-1                                  =   "Feather:style=Regular;2"

modules-left                            =   bspwm 
modules-right                           =   check_update fs temperature battery backlight volume date

tray-position                           =   right
tray-padding                            =   1
tray-maxsize                            =   16
tray-scale                              =   1.0

cursor-click                            =   pointer
cursor-scroll                           =   ns-resize

[module/xwindow]
type                                    =   internal/xwindow
label                                   =   %title%

[module/bspwm]
type                                    =   internal/bspwm

label-focused                           =   %index%
label-focused-background                =   ${colors.background-alt}
label-focused-padding                   =   1

label-occupied                          =   %index%
label-occupied-padding                  =   1
label-occupied-foreground               =   ${colors.foreground-alt}

label-urgent                            =   %index%!
label-urgent-background                 =   ${colors.alert}
label-urgent-padding                    =   1

label-empty                             =   %index%
label-empty-padding                     =   1

[module/eth-up]
type                                    =   internal/network
interface                               =   eno1
interval                                =   3

format-connected-prefix                 =   "  "

label-connected                         =   %upspeed%
label-disconnected                      =   "  "

[module/eth-down]
type                                    =   internal/network
interface                               =   eno1
interval                                =   3

format-connected-prefix                 =   "  "

label-connected                         =   %downspeed%
label-disconnected                      =   "  "

[module/check_update]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/updates_arch_combined.sh"

label                                   =   "%output%"
format-prefix                           =   "  "
format-prefix-foreground                =   #FF7400

interval                                =   7200

[module/fs]
type                                    =   internal/fs
mount-0                                 =   /home

format-mounted-prefix                   =   "  "
format-mounted-prefix-foreground        =   #7289DA
label-mounted                           =   %free%

interval                                =   7200

[module/cpu]
type                                    =   internal/cpu
label                                   =   %percentage%%

format                                  =   <label>
format-prefix                           =   "  "

interval                                =   5

[module/memory]
type                                    =   internal/memory
label                                   =   %gb_used%/%gb_total%

format                                  =   <label>
format-prefix                           =   "  "

interval                                =   5

[module/temperature]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/temperature.sh"

label                                   =   "%output%"
format-prefix                           =   "  "
format-prefix-foreground                =   #FF0000

interval                                =   5

[module/battery]
type                                    =   custom/script
exec                                    =   "~/.config/polybar/scripts/battery.sh"

label                                   =   "%output%"

interval                                =   5

[module/backlight]
type                                    =   custom/ipc
hook-0                                  =   "light -G | sed 's/\.[0-9]*//'"

format-prefix                           =   "  "
format-prefix-foreground                =   #FFF000

initial                                 =   1

[module/volume]
type                                    =   custom/ipc
hook-0                                  =   "~/.config/polybar/scripts/display_volume.sh"

format-prefix                           =   "  "
format-prefix-foreground                =   #00FFFF

initial                                 =   1


[module/date]
type                                    =   internal/date
label                                   =   %date% %time%

date                                    =   %a %d %b
time                                    =   %H:%M

format-prefix                           =   "  "
format-prefix-foreground                =   #00FF00

interval                                =   60

[settings]
screenchange-reload                     =   true

[global/wm]
margin-top                              =   0
margin-bottom                           =   0

